<!DOCTYPE html>
<html>
  <head>
    <title>The movies list</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= nav_bar brand: "Filmes", class:"navbar navbar-expand-lg", brand_link: root_url do %>
        <%= menu_group do %>
        <%= menu_item "Adicionar um novo filme", new_filme_path %>
        <%= menu_item "GenÃªros", generos_path %>
        <%= menu_item "Minha lista", minha_lista_path %>
      <%end%>
      <%= form_tag busca_filme_path, method: :get, class:"navbar-form navbar-right" do %>
      <div class="form-group">
        <%= text_field_tag :titulo, @titulo, class: "from-control"%>
        <%= button_to "Buscar", nil, class:"btn btn-default"%>    
      </div>
      <%end%>
    <%end%>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>